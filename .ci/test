#!/usr/bin/env bash

# This will set up our environment to use the freshly-installed
# QT 5.9 PPA packages
source /opt/qt59/bin/qt59-env.sh

set -e
set -x

qmake -v
qmake "CONFIG+=test" "CONFIG+=c++14"  "QMAKE_CXX=clang++-5.0" "QMAKE_LINK=clang++-5.0"  amanuensis.pro
make
LD_LIBRARY_PATH="${TRAVIS_BUILD_DIR}/core" core-test/core-test
